<Window x:Class="CinemaClient.ReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaClient"
        mc:Ignorable="d"
        Style="{StaticResource WindowStyle}"
        Title="Rezerwacja" Height="750" Width="900" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Border Style="{StaticResource MainBorderStyle}">
            <ContentControl Name="ViewContentControl" />
        </Border>
        <ProgressBar Name="ProgressBar" Grid.Row="1" Style="{StaticResource ProgressBarStyle}" Visibility="Collapsed" />
    </Grid>
</Window>
